{
  "Version": "2012-10-17",
  "Id": "TLSOnlyPolicy",
  "Statement": [
    {
      "Sid": "DenyUnencryptedInTransit",
      "Effect": "Deny",
      "Principal": "*",
      "Action": "s3:*",
      "Resource": [
        "arn:aws:s3:::dp-lab-secure-bucket",
        "arn:aws:s3:::dp-lab-secure-bucket/*"
      ],
      "Condition": {
        "Bool": { "aws:SecureTransport": "false" }
      }
    }
  ]
}
